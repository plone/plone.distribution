<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone.distribution"
>

  <div metal:fill-slot="main">
    <tal:main-macro metal:define-macro="main">

      <h1 class="documentFirstHeading"
          i18n:translate=""
      >Export current site contents to
        <span tal:content="view/distribution/title"
              i18n:name="distribution_title"
        ></span></h1>

      <p class="documentDescription">
        <span i18n:translate="">Content will be exported to</span>
        <span tal:content="view/directory">/foo/bar</span>

        <form action="@@export_dist_all"
              enctype="multipart/form-data"
              method="post"
              tal:attributes="
                action request/URL;
              "
        >

          <div class="field mb-3">
            <label for="exports"
                   i18n:translate=""
            >Export steps</label>
            <div class="form-check">
              <input class="form-check-input"
                     id="contents"
                     checked="true"
                     name="exports:list"
                     onclick="return false;"
                     type="checkbox"
                     value="contents"
              />
              <label class="form-check-label"
                     for="contents"
                     i18n:translate=""
              >
                  Contents
              </label>
            </div>
            <div class="form-check"
                 tal:repeat="step view/other_exports"
            >
              <input class="form-check-input"
                     id="default"
                     name="exports:list"
                     type="checkbox"
                     value="default"
                     tal:attributes="
                       value step/name;
                       id step/name;
                       checked step/selected;
                     "
              />
              <label class="form-check-label"
                     for="default"
                     tal:content="python: step.name"
                     tal:attributes="
                       for python: step.name;
                     "
              >
                  Export Step Name
              </label>
            </div>
          </div>

          <div class="form-group">
            <div class="field mb-3">
              <label for="download_to_server"
                     i18n:translate=""
              >Export format</label>
              <div class="widget">
                <select class=""
                        name="download_to_server:int"
                >
                  <option value="2"
                          i18n:translate=""
                  >Save each item as a separate file in the distribution</option>
                  <option value="1"
                          i18n:translate=""
                  >Save all items to a single file in the distribution</option>
                </select>
              </div>
            </div>
          </div>
          <div class="form-group">
            <input name="form.submitted"
                   type="hidden"
                   value="1"
            />

            <button class="btn btn-primary submit-widget button-field context"
                    name="submit"
                    type="submit"
                    value="export"
                    i18n:translate=""
            >Export all
            </button>
          </div>

        </form>

      </p></tal:main-macro>
  </div>

</html>
